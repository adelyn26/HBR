@model IEnumerable<WebApp.Models.Categoria>




    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="card patients-list">
                    <div class="body">
                        <div class="tab-content m-t-10">
                            <div class="tab-pane table-responsive active" id="All">
                                <table id="example" class="table table-striped table-bordered" style="width:100%; align-content:center">
                                    <thead>
                                        <tr class="col-sm-10">
                                            <th>TIPOS DE CATEGORIAS</th>
                                            <th style="text-align:center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody class="col-md-2">

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.nombre)
                                                </td>
                                                <td class="" style="text-align:center">
                                                    <a href="\Categorias\Edit?id= @Html.DisplayFor(modelItem => item.id_Categoria)" title="Editar" type="button" class="btn btn-primary"><ion-icon name="create-outline"></ion-icon></a>
                                                    <a href="\Categorias\Delete?id= @Html.DisplayFor(modelItem => item.id_Categoria)" title="Eliminar" type="button" class="btn btn-danger"><ion-icon name="trash"></ion-icon></a>


                                                    @*<a href="\Actors\Details" title="Detalle" type="button" class="btn btn-warning"><ion-icon name="newspaper-outline"></ion-icon></a>*@
                                                    <!-- Modal -->


                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <a href="/Categorias/Create" type="button" class="btn btn-primary">Crear Categoria</a>
    </div>



<script src="~/Content/Menu/js/jquery-3.3.1.min.js"></script>

@*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();



    });


</script>

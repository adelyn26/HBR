@model WebApp.Models.Usuario
<!DOCTYPE html>
<html lang="en">
@{
    Layout = null;

}
<head>
    

    <title>Gaze Sign up & login Form a Flat Responsive Widget Template :: w3layouts </title>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Gaze Sign up & login Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <script>
        addEventListener("load", function () { setTimeout(hideURLbar, 0); }, false); function hideURLbar() { window.scrollTo(0, 1); }
    </script>
    <!-- Meta tags -->
    <!--stylesheets-->
    <link href="css/style.css" rel='stylesheet' type='text/css' media="all">
    <link href="~/Content/Login/css/style.css" rel="stylesheet" />
    <!--//style sheet end here-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
</head>

<body>
    <div class="mid-class">
        <div class="art-right-w3ls">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Raw(TempData["msg"])
                <input type="hidden" id="IdUser" name="IdUser"/>
                <!-- popup-->
                <div id="content1" @*class="popup-effect"*@>
                    <div class="popup">
                        <!--login form-->
                        <div class="letter-w3ls">
                            <form action="#" method="post" data-toggle="validator">

                                <div class="form-left-to-w3l">
                                    <input type="text" name="nombre" placeholder="Username" required="">
                                </div>
                                <div class="form-left-to-w3l">
                                    <input type="text" name="apellido" placeholder="Last Name" required="">
                                </div>
                                <div class="form-left-to-w3l">
                                    <input type="text" name="telefono" id="telefono" placeholder="Phone" required="">
                                </div>
                                <div class="form-left-to-w3l">
                                    <input type="email" id="email" name="correo" placeholder="Email" required="">
                                    <span id="emailOK"></span>
                                </div>
                                <div class="form-left-to-w3l">
                                    <input type="password" name="contrasena" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" placeholder="Password" MAXLENGTH="20" required="">
                                </div>
                                <div class="btnn">
                                    <button type="submit" name="enviar" value="Registrar">Sign Up</button>

                                    <br>

                                </div>
                                <h4>
                                    <a href="/Usuarios/Login" style="color:Highlight">
                                        Regresar al Login...
                                    </a>
                                </h4>

                            </form>
                            <div class="clear"></div>
                        </div>
                        <!--//login form-->
                        <a class="close" href="#">&times;</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>


</html>



@*<script src="~/Content/Menu/js/jquery-3.3.1.min.js"></script>*@
<script src="~/Content/Menu/js/jquery-3.3.1.min.js"></script>
<script src="~/Content/Menu/js/jquery-1.10.2.min.js"></script>

<script src="~/Content/Menu/js/jQuery-Mask-Plugin-master/dist/jquery.mask.js"></script>
<script src="~/Content/Menu/js/jQuery-Mask-Plugin-master/dist/jquery.mask.min.js"></script>



<script type="text/javascript">
    $(document).ready(function () {

        $('#telefono').mask('(000)000-0000');

     

     
    });
</script>
